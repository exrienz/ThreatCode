# LLM Provider Configuration
# Choose one: openrouter, openai, custom
LLM_PROVIDER=openrouter

# OpenRouter Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-haiku

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Custom Provider Configuration
# Only required if LLM_PROVIDER=custom
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_MODEL=your-model-name
CUSTOM_PROVIDER_URL=https://api.example.com/v1

# Rate Limiting
# Delay between API requests in seconds (default: 0.5)
RATE_LIMIT_DELAY=0.5

# Maker-Checker Configuration (Optional)
# Enable a second LLM to validate findings and eliminate false positives
ENABLE_CHECKER=false

# Checker LLM Provider (only required if ENABLE_CHECKER=true)
# Choose one: openrouter, openai, custom
CHECKER_PROVIDER=openrouter

# Checker OpenRouter Configuration
CHECKER_OPENROUTER_API_KEY=your_checker_openrouter_api_key_here
CHECKER_OPENROUTER_MODEL=anthropic/claude-3-haiku

# Checker OpenAI Configuration
CHECKER_OPENAI_API_KEY=your_checker_openai_api_key_here
CHECKER_OPENAI_MODEL=gpt-4

# Checker Custom Provider Configuration
CHECKER_CUSTOM_API_KEY=your_checker_custom_api_key_here
CHECKER_CUSTOM_MODEL=your-checker-model-name
CHECKER_CUSTOM_PROVIDER_URL=https://api.example.com/v1

# Security: Custom Provider Allowlist
# Set to 'true' to allow any custom provider URL (NOT RECOMMENDED for security)
# By default, only allowlisted domains are permitted
ALLOW_ALL_CUSTOM_URLS=false
